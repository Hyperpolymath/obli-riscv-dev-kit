{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Note G",
  "scopeName": "source.noteg",
  "patterns": [
    {"include": "#comments"},
    {"include": "#strings"},
    {"include": "#templates"},
    {"include": "#keywords"},
    {"include": "#accessibility"},
    {"include": "#functions"},
    {"include": "#numbers"},
    {"include": "#operators"},
    {"include": "#punctuation"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.noteg",
          "match": "//.*$"
        },
        {
          "name": "comment.block.noteg",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.noteg",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.noteg",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.noteg",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.noteg",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "templates": {
      "patterns": [
        {
          "name": "meta.template.noteg",
          "begin": "\\{\\{",
          "beginCaptures": {
            "0": {"name": "punctuation.definition.template.begin.noteg"}
          },
          "end": "\\}\\}",
          "endCaptures": {
            "0": {"name": "punctuation.definition.template.end.noteg"}
          },
          "patterns": [
            {
              "name": "variable.other.noteg",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            {
              "name": "keyword.operator.pipe.noteg",
              "match": "\\|"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.noteg",
          "match": "\\b(if|else|for|while|return|import|export)\\b"
        },
        {
          "name": "keyword.declaration.noteg",
          "match": "\\b(let|const|function|component|template)\\b"
        },
        {
          "name": "constant.language.noteg",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "accessibility": {
      "patterns": [
        {
          "name": "keyword.other.accessibility.noteg",
          "match": "\\b(accessibility|bsl|gsl|asl|makaton)\\b"
        },
        {
          "name": "entity.name.tag.accessibility.bsl.noteg",
          "match": "\\[BSL\\]"
        },
        {
          "name": "entity.name.tag.accessibility.asl.noteg",
          "match": "\\[ASL\\]"
        },
        {
          "name": "entity.name.tag.accessibility.gsl.noteg",
          "match": "\\[GSL\\]"
        },
        {
          "name": "entity.name.tag.accessibility.makaton.noteg",
          "match": "\\[Makaton\\]"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.noteg",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.noteg",
          "match": "\\b(print|len|upper|lower|escape_html|date|join)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.noteg",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.noteg",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.noteg",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.comparison.noteg",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.noteg",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.noteg",
          "match": "="
        },
        {
          "name": "keyword.operator.pipe.noteg",
          "match": "\\|>"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.noteg",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.bracket.noteg",
          "match": "[\\[\\]\\(\\)\\{\\}]"
        }
      ]
    }
  }
}
